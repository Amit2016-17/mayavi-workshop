- code: |
    @mlab.animate(delay=100, ui=False)
    def anim():
        x, y = np.mgrid[0:3:1,0:3:1]
        s = mlab.surf(x, y, x*0.1)
        for i in range(25):
            s.mlab_source.set(
                scalars = x*0.1*(i+1))
            yield

